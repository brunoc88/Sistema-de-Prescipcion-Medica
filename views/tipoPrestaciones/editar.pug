extends ../layout

block content
  


  h1 Editar Prestacion Medica

    if message
      #notification.alert.alert-success
        | #{message}

    if errorMessage
      #notification.alert.alert-danger
       | #{errorMessage}

  form(action=`/tipoPrestaciones/actualizar/${tp.idTipo}?_method=PATCH`, method='POST')
    div(class="mb-3")
      label(for="nombre") Nombre de la Prestacion:
      input(type="text", name="nombre", value=`${tp.nombre}`, class="form-control w-auto", required)
    div(class="btn-group")
      button(type="submit", class="btn btn-primary mt-2") Guardar
      a(href='/tipoPrestaciones/index', class="btn btn-secondary mt-2") Volver