extends ../layout

block content
  h1 Obras Sociales

  h2 Crear Obra Social
  form(action="/obra/crear", method="POST")
    div(class="mb-3")
      label(for="nombre") Nombre de la Obra Social:
      input(type="text", name="nombre", class="form-control", required)
    button(type="submit", class="btn btn-primary mt-2") Crear

  h2 Listado de Obras Sociales
  table.table.table-striped
    thead
      tr
        th ID
        th Nombre
        th Estado
    tbody
      if obrasCreadas.length > 0
        each obra in obrasCreadas
          tr
            td #{obra.id}
            td #{obra.nombre}
            td #{obra.estado ? 'Activo' : 'Inactivo'}
            td
              form(action=`/obra/baja/${obra.id}?_method=PATCH`, method='POST')
                button(type="submit", class="btn btn-danger") Baja
      else
        tr
          td(colspan="3") No hay obras sociales registradas
