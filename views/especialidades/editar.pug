extends ../layout

block content
  
  h1 Especialidades

  h2 Editar Especialidades

  if message
    #notification.alert.alert-success
      | #{message}

  if errorMessage
    #notification.alert.alert-danger
      | #{errorMessage}
  form(action=`/especialidades/actualizar/${e.idEspecialidad}?_method=PATCH`, method='POST')
    div(class="mb-3")
      label(for="nombre") Nombre de Especialidad:
      input(type="text", name="nombre", value=`${e.nombre}`, class="form-control w-auto", required)
    div(class="btn-group")
      button(type="submit", class="btn btn-primary mt-2") Guardar
      a(href='/especialidades/index', class="btn btn-secondary mt-2") Volver


    